CFLAGS = -Wall -fPIC --shared -g -O2
CC = gcc
INCLUDE_DIR = /usr/local/adns_tsar/devel
LINK = $(CC) -I$(INCLUDE_DIR) $(CFLAGS)


OBJS =  mod_test.so

all: $(OBJS)

$(OBJS): %.so: %.c
	$(LINK) $< -o $@
clean:
	rm -f *.so;
install:
	mkdir -p /etc/adns_tsar/conf.d/
	cp ./mod_test.so /usr/local/adns_tsar/modules/
	cp ./mod_test.conf /etc/adns_tsar/conf.d/test.conf
uninstall:
	rm /usr/local/adns_tsar/modules/mod_test.so
	rm /etc/adns_tsar/conf.d/test.conf
